{
  "name": "my-runner",
  "version": "3.1.1",
  "main": "index.js",
  "description": "Run CommonJS script in sandbox with customized style",
  "author": "imcuttle <moyuyc95@gmail.com>",
  "files": [
    "lib",
    "bin",
    "index.js",
    "index.d.ts"
  ],
  "scripts": {
    "test": "jest",
    "prepublishOnly": "npm test",
    "doc": "documentation --github --markdown-toc=false readme index.js -a public -s \"API\" && git add README.md",
    "version": "npm run doc && npm run changelog",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0 && git add CHANGELOG.md"
  },
  "bin": "./bin/my-runner.js",
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS"
    }
  },
  "sideEffects": false,
  "engines": {
    "node": ">=8"
  },
  "keywords": [
    "imcuttle",
    "my",
    "runner",
    "my-runner"
  ],
  "license": "MIT",
  "repository": "imcuttle/my-runner",
  "jest": {
    "testEnvironment": "node",
    "setupFiles": [
      "<rootDir>/setup.js"
    ],
    "testMatch": [
      "**/__test{s,}__/*.(spec|test).{t,j}s{x,}"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@types/jest": "^23.3.14",
    "conventional-changelog-cli": "^2.1.0",
    "documentation": "^11.0.1",
    "husky": "^2.7.0",
    "jest": "^23.6.0",
    "memory-fs": "^0.5.0",
    "prettier": "^1.19.1",
    "pretty-quick": "^1.11.1"
  },
  "dependencies": {
    "browser-resolve": "^2.0.0",
    "concat-stream": "^2.0.0",
    "cosmiconfig": "^5.2.1",
    "debug": "^4.2.0",
    "micromatch": "^4.0.2",
    "minimist": "^1.2.5",
    "resolve": "^1.17.0",
    "source-map": "^0.7.4",
    "stack-trace": "^0.0.10"
  }
}
